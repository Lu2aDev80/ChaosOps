# Local Development Environment Template
# Copy this file to .env and update with your settings

# Database Configuration (for local development)
DATABASE_URL="postgresql://[your_username]:[your_password]@localhost:5432/konfidayplaner?schema=public"

POSTGRES_USER=[your_username]
POSTGRES_PASSWORD=[your_password]
POSTGRES_DB=konfidayplaner

# SMTP / Mail configuration (Use live mail server settings)
SMTP_HOST=[your_smtp_host]
SMTP_PORT=[your_smtp_port]
SMTP_USER=[your_smtp_user]
SMTP_PASS=[your_smtp_password]
SMTP_SECURE=[true_or_false]
SMTP_IGNORE_TLS=[true_or_false]
SMTP_REQUIRE_TLS=[true_or_false]
SMTP_REJECT_UNAUTHORIZED=[true_or_false]
MAIL_FROM_NAME=[your_mail_from_name]
MAIL_FROM_EMAIL=[your_mail_from_email]

# Logging (more verbose for development)
LOG_LEVEL=debug
PRISMA_LOG=info


# Application configuration
APP_BASE_PATH=
NODE_ENV=development

# Frontend URL Configuration
# For local development: Set to your dev server URL (usually auto-detected)
FRONTEND_URL=http://localhost:5173

# For production: This should be your live domain
FRONTEND_HOST=https://your-production-domain.com
